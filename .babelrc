{
    "plugins": [
        [
          "babel-plugin-root-import",                            
          {
            "paths": [
              {
                "rootPathSuffix": "./src",             
                "rootPathPrefix": "~/"                //  ~/ will now represent ./src    so you dont have to write ../../../../src
              },
              {
                "rootPathSuffix": "./src/Store/Reducers",
                "rootPathPrefix": "!/"
              },
              {
                "rootPathSuffix": "./src/Pages/Home",
                "rootPathPrefix": "-/"
              }
            ]
          } 
        ]
      ]
    }